rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Users collection: Users can read/write own profile, Admins can read/write all
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // Projects collection: 
    // Allow access if authenticated OR if project is shared publicly
    match /projects/{projectId} {
      allow read: if isAuthenticated() || 
        (resource.data.shareSettings.enabled == true);
        
      allow write: if isAuthenticated() || 
        (resource.data.shareSettings.enabled == true && 
         resource.data.shareSettings.accessLevel == 'comment');
    }

    // Feature Votes collection
    match /featureVotes/{voteId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // User Activity collection - Admins can read/write, users can write their own
    match /user_activity/{activityId} {
      allow read: if isAdmin();
      allow write: if isAuthenticated();
    }

    // Analytics Daily Stats collection - Admins only
    match /analytics_daily_stats/{statsId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Feedback Campaigns collection
    match /feedback_campaigns/{campaignId} {
      allow read: if isAuthenticated(); // All users can see active campaigns
      allow create, update, delete: if isAdmin();
    }

    // Campaign Attribution collection
    match /campaign_attribution/{attrId} {
      allow read: if isAdmin() || 
        (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }

    // Mail collection (for Firebase Email Extension)
    match /mail/{mailId} {
      allow read, write: if false; // Only Cloud Functions can write
    }
  }
}
